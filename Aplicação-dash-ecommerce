        "# Gráfico 1 – Histograma de valores\n",
        "fig_hist = px.histogram(df, x=\"valor_compra\", nbins=20, title=\"Distribuição dos Valores de Compra\")\n",
        "\n",
        "# Gráfico 2 – Gráfico de dispersão\n",
        "fig_disp = px.scatter(df, x=\"idade\", y=\"valor_compra\", title=\"Idade vs Valor da Compra\")\n",
        "\n",
        "# Gráfico 3 – Boxplot\n",
        "fig_box = px.box(df, y=\"valor_compra\", title=\"Distribuição (Boxplot) do Valor da Compra\")\n",
        "\n",
        "# Gráfico 4 – Barras (ex: compras por categoria)\n",
        "if \"categoria\" in df.columns:\n",
        "    fig_bar = px.bar(df[\"categoria\"].value_counts().reset_index(),\n",
        "                     x=\"index\", y=\"categoria\",\n",
        "                     title=\"Quantidade por Categoria\")\n",
        "else:\n",
        "    fig_bar = px.bar(title=\"Categoria não encontrada no arquivo\")\n"
